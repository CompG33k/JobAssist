{
  "manifest_version": 3,
  "name": "Job Application Helper",
  "version": "0.1.0",
  "description": "Upload your resume once, then auto-fill common job application fields + EEO questions.",
  "action": {
    "default_title": "Job Application Helper",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://job-boards.greenhouse.io/*",
    "https://*.greenhouse.io/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://job-boards.greenhouse.io/*", "https://*.greenhouse.io/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
